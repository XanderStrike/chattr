<div class="header">
	<h1>Sign In</h1>
	<h2>We missed you.</h2>
</div>

<div class="content">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "pure-form"}) do |f| %>
	  <div><%= f.label :email %><br />
	  <%= f.email_field :email, :autofocus => true %></div><br>

	  <div><%= f.label :password %><br />
	  <%= f.password_field :password %></div><br>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div><br>
	  <% end -%>

	  <div><%= f.submit "Sign in", class: "pure-button" %></div><br>
	<% end %>
	<%= render "devise/shared/links" %>
</div>


